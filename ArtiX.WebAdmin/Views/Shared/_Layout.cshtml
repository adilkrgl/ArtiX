@* TEMPLATE-BASED VIEW (Vuexy).
   Do NOT change layout structure or CSS classes.
   Only adjust paths, data bindings and sections for ArtiX. *@
@{
    var currentTitle = ViewData["Title"]?.ToString();
    var title = string.IsNullOrWhiteSpace(currentTitle) ? "ArtiX Web Admin" : $"{currentTitle} - ArtiX Web Admin";
}
<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" data-assets-path="/vuexy/" data-template="vertical-menu-template">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>@title</title>
    @await Html.PartialAsync("Sections/Navbar/_Variables")
    @await Html.PartialAsync("Sections/Navbar/_Styles")
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            @await Html.PartialAsync("Sections/Menu/_VerticalMenu")
            <div class="layout-page">
                @await Html.PartialAsync("Sections/Navbar/_Navbar")
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()
                    </div>
                    @await Html.PartialAsync("Sections/Footer/_Footer")
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    @await Html.PartialAsync("Sections/Navbar/_Scripts")
    @RenderSection("Scripts", required: false)
</body>
</html>
